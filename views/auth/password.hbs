<div class="row">

  <div class="col s6 offset-s3">
    <h1>New password</h1>

    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}

    <form action="/auth/password" method="POST">

      <div class="input-field">
        <input placeholder="Enter password" id="password" name="password" type="password" class="validate" required>
        <label for="password">New password</label>
        <span class="helper-text" data-error="Invalid password"></span>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">

      <button class="btn waves-effect waves-light" type="submit">Update password
        <i class="material-icons right">edit</i>
      </button>

    </form>
  </div>

</div>