<h1>Update Course {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="form">

  <div class="input-field">
    <input placeholder="Enter course title" id="title" name="title" type="text" class="validate" required
      value="{{course.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Invalid course title"></span>
  </div>

  <div class="input-field">
    <input placeholder="Enter price" id="price" name="price" type="number" class="validate" required min="1"
      value="{{course.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Invalid price"></span>
  </div>

  <div class="input-field">
    <input placeholder="Enter URL image" id="img" name="img" type="text" class="validate" required
      value="{{course.img}}">
    <label for="img">Course image</label>
    <span class="helper-text" data-error="Invalid URL"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button class="btn waves-effect waves-light" type="submit">Update course</button>

</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <button class="btn waves-effect waves-light red" type="submit">Delete course</button>
</form>